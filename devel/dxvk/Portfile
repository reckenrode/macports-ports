PortSystem          1.0
PortGroup           github 1.0

github.setup        marzent dxvk 1.9.2 v -mac

categories          devel
maintainers         largeandhighquality.com:randy

description         macOS-friendly build of DXVK
long_description    ${description}

platforms           macosx
supported_archs     x86_64
license             Apache-2.0

distname            ${github.project}-${github.version}-mac
github.tarball_from releases

checksums           rmd160  fade2433fbbfc4df2c53edad84eee5d4218fd848 \
                    sha256  410f4241e2d49ef57f27bfa17a64f977d82a88413b5facb91714f73e5da1918d \
                    size    7965271

use_zip             yes

use_configure       no

build {}

destroot {
    set dxvkpath ${destroot}${prefix}/share/dxvk
    xinstall -d -m 755 ${dxvkpath}
    copy ${worksrcpath}/setup_dxvk.sh \
        ${worksrcpath}/x32 \
        ${worksrcpath}/x64 \
        ${dxvkpath}
}
